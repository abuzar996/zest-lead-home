{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node",
      "express",
      "express-serve-static-core",
      "http-cache-semantics",
      "responselike"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
